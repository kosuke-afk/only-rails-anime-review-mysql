<%= form_with model: episode_rate, url: update_episode_rate_user_path(current_user,work,episode), id: "episode-rate-form",data: {turbo_method: :patch, controller: "episode-rate-form", action: "input->episode-rate-form#submit"}, class: "episode-rate-form" do |form| %>
    <div class="episode-rate-field"  data-controller="rate-range">
        <%= form.label :impressed, class: "episode-rate-label" %>
        <div class="episode-rate-item">
            <span class="min-value">0</span>
            <%= form.range_field :impressed, data: { rate_range_target: "range"},in: 0..100, class: "episode-range"%>
            <span class="max-value" data-rate-range-target="score"></span>
        </div>
    </div>
