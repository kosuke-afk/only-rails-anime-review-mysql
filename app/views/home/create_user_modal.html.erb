<%= turbo_frame_tag "top-modal" do %>
  <div id="mask">
    <%= link_to "", root_path, data: { turbo_frame: "modal-form" }, class: "mask-link" %>
  </div>
	<div id="modal">
		<div class="modal-content">
			<h1>ユーザー新規作成</h1>
			<%= link_to "✖️",root_path, data: { turbo_frame: "modal-form" },class: "close-button" %>
			<div class="modal-main">
					<% if flash[:danger].present? %>
						<%= render partial: "home/partial/error_messages"%>
					<% end %>
					<%= form_with model: @user, data: {turbo_method: :post} , id: "form",class: "create-field" do |form| %>
							<div class="form-items">
								<%= form.label :name, "名前", class: "form-label"%>
								<%= form.text_field :name, class: "input-item" %>
							</div>
							<div class="form-items">
								<%= form.label :email, "メールアドレス", class: "form-label" %>
								<%= form.email_field :email, class: "input-item" %>
							</div>
							<div class="form-items">
								<%= form.label :password, "パスワード", class: "form-label" %>
								<%= form.password_field :password, class: "input-item" %>
							</div>
							<div class="form-items">
								<%= form.label :password_confirmation, "パスワード確認", class: "form-label" %>
								<%= form.password_field :password_confirmation, class: "input-item" %>
							</div>
							<%= form.submit "新規作成", class: "form-button" %>
					<% end %>
				</div>
		</div>  
	</div>
<% end %>