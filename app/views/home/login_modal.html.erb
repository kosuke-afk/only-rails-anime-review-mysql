<%= turbo_frame_tag "top-modal" do %>
  <div id="mask">
    <%= link_to "", root_path, data: {turbo_frame: "top-modal"}, class: "mask-link" %>
  </div>
  <div id="modal">
    <div class="modal-content">     
      <h1>ログイン</h1>
      <%= link_to "✖️",root_path, data: {turbo_frame: "top-modal"},class: "close-button" %>
      <div id="modal-main">
        <ul id="error-area">
        </ul>
        <%= form_with url: session_login_path, scope: :user, class: "login-field" do |form| %>
            <div class="form-items">
                <%= form.label :email, "メールアドレス", class: "form-label" %>
                <%= form.email_field :email, class: "input-item" %>
            </div>
            <div class="form-items">
                <%= form.label :password, "パスワード", class: "form-label" %>
                <%= form.password_field :password, class: "input-item" %>
            </div>
            <%= form.submit "ログイン", class: "form-button" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>